{
  "version": 2,
  "buildCommand": "npm install && echo 'Backend build completed'",
  "installCommand": "npm install",
  "builds": [
    {
      "src": "api-backup/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api-backup/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api-backup/$1"
    }
  ],
  "functions": {
    "api-backup/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
